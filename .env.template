# ============================================
# Ascend AI - Environment Variables Template
# ============================================
# This file documents all required environment variables.
# Copy this to .env and fill in your values.
#
# SECURITY WARNING: Never commit .env files with real secrets!
# ============================================

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/ascend_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ascend_db

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_URL=redis://redis:6379/0

# ============================================
# AUTHENTICATION
# ============================================
# Generate a secure random string (min 32 characters)
# Example: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-key-min-32-chars-CHANGE-THIS
NEXTAUTH_URL=http://localhost:3000

# OAuth Providers (Get from Google/GitHub OAuth Apps)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ============================================
# MINIO / S3 STORAGE
# ============================================
S3_ACCESS_KEY_ID=minio_access_key
S3_SECRET_ACCESS_KEY=minio_secret_key
S3_ENDPOINT_URL=http://minio:9000
S3_BUCKET_NAME=ascend-resumes
S3_REGION=us-east-1

# MinIO Console (for local development)
MINIO_ROOT_USER=minio_access_key
MINIO_ROOT_PASSWORD=minio_secret_key

# ============================================
# LLM PROVIDER CONFIGURATION
# ============================================
# Options: "local" or "openai"
LLM_PROVIDER=local

# Local LLM (Ollama/vLLM)
LOCAL_LLM_API_BASE=http://localhost:11434/v1
LOCAL_LLM_MODEL=llama3

# OpenAI (Optional - only if LLM_PROVIDER=openai)
OPENAI_API_KEY=sk-REPLACE_WITH_YOUR_KEY

# ============================================
# WHISPER TRANSCRIPTION SERVICE
# ============================================
WHISPER_SERVICE_URL=http://whisper-service:8080
WHISPER_MODEL=medium.en

# ============================================
# CELERY CONFIGURATION
# ============================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ============================================
# CORS CONFIGURATION
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================
# FRONTEND CONFIGURATION
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# ============================================
# APPLICATION SETTINGS
# ============================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
